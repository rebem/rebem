{
  "name": "rebem",
  "version": "0.5.0",
  "description": "React ❤︎ BEM",
  "keywords": [ "rebem", "react", "bem", "bemjson" ],
  "homepage": "https://github.com/rebem/rebem",
  "repository": "rebem/rebem",
  "contributors": [
    "Kir Belevich <kir@soulshine.in> (https://github.com/deepsweet)",
    "Denis Koltsov <iam@mistadikay.com> (https://github.com/mistadikay)"
  ],
  "main": "build/index.js",
  "files": [ "build/" ],
  "dependencies": {
    "react": "0.14.x",
    "rebem-classname": "0.1.x"
  },
  "devDependencies": {
    "husky": "0.11.x",
    "rimraf": "2.5.x",

    "babel-cli": "6.5.x",
    "babel-core": "6.5.x",
    "babel-preset-es2015": "6.5.x",
    "babel-preset-stage-2": "6.5.x",
    "babel-plugin-add-module-exports": "0.1.x",

    "eslint": "2.1.x",
    "babel-eslint": "5.0.x",
    "eslint-plugin-babel": "3.1.x",
    "eslint-config-rebem": ">1.0.0-alpha.1",

    "react-dom": "0.14.x",
    "react-addons-test-utils": "0.14.x",

    "mocha": "2.4.x",
    "babel-istanbul": "0.6.x",
    "codecov": "1.0.x",
    "chokidar-cli": "1.2.x"
  },
  "scripts": {
    "prebuild": "rimraf build/",
    "build": "babel lib/ -d build/",
    "dev": "npm run build -- -w",

    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "mocha --compilers js:babel-register --recursive",
    "precoverage": "rimraf coverage/",
    "coverage": "babel-node node_modules/.bin/babel-istanbul cover _mocha -- --recursive",
    "tdd": "chokidar lib/*.js test/lib/*.js -c 'npm run coverage' --initial",

    "precodecov": "npm run coverage",
    "codecov": "codecov --file=coverage/lcov.info --disable=search,gcov",
    "pretravis": "npm run lint",
    "travis": "npm run codecov",

    "prepush": "npm test",
    "prepublish": "npm run build"
  },
  "engines": {
    "node": ">=0.12.0",
    "npm": ">=2.7.0"
  },
  "license": "MIT"
}
